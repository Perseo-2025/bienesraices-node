extends ../layout/index

block contenido
    .py-0 
        h1.text-4xl.my-5.font-extrabold.text-center Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold.text-indigo-600= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(action="/auth/restaurar-password" method="POST")   
                    input(type="hidden" name="_csrf" value=csrfToken)        
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.mt-2.font-bold(for="email") Gmail de Registro
                        input#email.w-full.px-3.py-2.border.border-indigo-500.rounded-xl.placeholder-gray-400(placeholder="you@example.com" type="email" name="email")
                
                    input(class="w-full bg-indigo-600 mt-5 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")
                    div.flex.items-center.justify-between
                        a(href="/auth/registro").text-gray-400.text-xs.mt-2 ¿Aún no tienes una cuenta? Crear Cuenta
                        a(href="/auth/login").text-gray-400.text-xs.mt-2 Iniciar Sesión
block pie 
